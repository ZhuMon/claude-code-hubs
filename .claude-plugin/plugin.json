{
  "name": "hubs",
  "version": "0.0.2",
  "description": "Claude Code configurations hub including Serena MCP for semantic code operations and commit skill for conventional commits",
  "author": {
    "name": "ZhuMon",
    "url": "https://github.com/ZhuMon"
  },
  "repository": "https://github.com/ZhuMon/claude-code-hubs",
  "license": "MIT",
  "keywords": [
    "serena",
    "mcp",
    "semantic-code",
    "symbol-operations",
    "project-memory",
    "commit",
    "conventional-commits"
  ],
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false"
      ]
    }
  }
}
